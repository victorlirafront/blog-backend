{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": ["**/*.json", "**/*.hbs"],
    "webpack": true,
    "webpackConfigPath": "webpack.config.js"
  },
  "monorepo": false,
  "root": "src"
}
